@using WEB7.Models
@model PeliculasViewModel

<h2>Editar Donante</h2>

<form asp-controller="Pelicula" asp-action="Editar" method="POST">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" asp-for="nombre" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="apellido">Apellido:</label>
        <input type="text" id="apellido" name="apellido" asp-for="apellido" class="form-control">
    </div>

    <div class="form-group">
        <label for="edad">Edad:</label>
        <input type="number" id="edad" name="edad" asp-for="edad" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="genero">Género:</label>
        <input type="text" id="genero" name="genero" asp-for="genero" class="form-control">
    </div>

    <div class="form-group">
        <label for="tipoSangre">Tipo de Sangre:</label>
        <input type="text" id="tipoSangre" name="tipoSangre" asp-for="tipoSangre" class="form-control">
    </div>

    <div class="form-group">
        <label for="direccion">Dirección:</label>
        <input type="text" id="direccion" name="direccion" asp-for="direccion" class="form-control">
    </div>

    <div class="form-group">
        <label for="telefono">Teléfono:</label>
        <input type="text" id="telefono" name="telefono" asp-for="telefono" class="form-control">
    </div>

    <div class="form-group">
        <label for="correoElectronico">Correo Electrónico:</label>
        <input type="email" id="correoElectronico" name="correoElectronico" asp-for="correoElectronico" class="form-control">
    </div>

    <div class="form-group">
        <label for="ultimaDonacion">Última Donación:</label>
        <input type="date" id="ultimaDonacion" name="ultimaDonacion" asp-for="ultimaDonacion" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="restricciones">Restricciones:</label>
        <textarea id="restricciones" name="restricciones" asp-for="restricciones" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>

